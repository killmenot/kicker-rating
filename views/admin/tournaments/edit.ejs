<form action="" method="POST" class="col-md-6 col-md-offset-3">
  <div class="row">
    <p class="bg-danger errors"></p>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group<%= errors.name ? ' has-error has-feedback' : '' %>">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="<%= values.name || '' %>">
        <% if(errors.name) { %>
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        <small class="help-block"><%= errors.name.message %></small>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group<%= errors.season_id ? ' has-error has-feedback' : '' %>">
        <label for="season_id">Season</label>
        <select class="form-control" id="season_id" name="season_id">
            <% values.seasons.forEach(function (season) { %>
                <option value="<%= season.id %>" <%= season.selected ? ' selected' : '' %> ><%= season.title %></option>
            <% }) %>
        </select>
        <% if(errors.season_id) { %>
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        <small class="help-block"><%= errors.season_id.message %></small>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group<%= errors.date ? ' has-error has-feedback' : '' %>">
        <label class="control-label" for="date_started">Date</label>
        <input type="text" class="input-sm form-control" name="date" id="date" placeholder="Enter date" data-provide="datepicker" value="<%= values.date || '' %>">
        <% if(errors.date) { %>
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        <small class="help-block"><%= errors.date.message %></small>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="note">Note</label>
        <textarea name="note" id="note" class="form-control" placeholder="Enter a note" value="<%= values.note || '' %>"></textarea>
      </div>
    </div>
  </div>
  <div class="row pull-right">
    <div class="col-md-12">
      <input type="submit" class="btn btn-primary" value="Submit" />
      or
      <a href="/admin/tournaments">Cancel</a>
    </div>
  </div>
</form>
