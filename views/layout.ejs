<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/assets/components/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/assets/components/bootstrap/dist/css/bootstrap-theme.min.css" />
  <link rel="stylesheet" href="/assets/components/bootstrap-responsive-margins/dist/responsive-margins.css" />
  <link rel="stylesheet" href="/assets/components/bootstrap-datepicker/css/datepicker3.css" />
  <link rel="stylesheet" href="/stylesheets/theme.css" />
</head>

<body role="document">
  <!-- Fixed navbar -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Rating</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if (user) {%>
            <li<%- activeNav(mainNav, 'admin') %>><a href="/admin">Admin</a></li>
          <% } %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if (user) {%>
            <li><a href="/logout">Sign out</a></li>
          <% } else { %>
            <li><a href="/login">Sign in</a></li>
          <% } %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <% if (user) {%>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-nav">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse main-nav">
        <ul class="nav navbar-nav">
          <li<%- activeNav(subNav, 'seasons') %>><a href="/admin/seasons">Seasons</a></li>
          <li<%- activeNav(subNav, 'tournaments') %>><a href="/admin/tournaments">Tournaments</a></li>
        </ul>
      </div>
    </div>
  </div>
  <% } %>

  <div class="container theme-showcase" role="main">
    <% include partials/_flash %>
    <%- body %>
  </div>
  <script src="/assets/components/jquery/dist/jquery.min.js"></script>
  <script src="/assets/components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/assets/components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
</body>

</html>
